{
  "name": "claude-composer",
  "version": "0.1.0",
  "description": "Claude Composer",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "format": "prettier --write \"**/*.{js,mjs,jsx,ts,tsx,json,md,mdx,css,yml,yaml}\"",
    "test": "npm run build && vitest --reporter verbose --run",
    "test:watch": "npm run build && vitest --watch"
  },
  "type": "module",
  "bin": {
    "claude-composer": "./dist/cli.js"
  },
  "dependencies": {
    "@homebridge/node-pty-prebuilt-multiarch": "^0.12.0",
    "@types/js-yaml": "^4.0.9",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/headless": "^5.5.0",
    "@xterm/xterm": "^5.5.0",
    "clipboardy": "^4.0.0",
    "commander": "^14.0.0",
    "js-yaml": "^4.1.0",
    "node-notifier": "^10.0.1",
    "strip-ansi": "^7.1.0",
    "zod": "^3.25.39"
  },
  "devDependencies": {
    "@types/node": "^22.15.23",
    "prettier": "^3.5.3",
    "tsup": "8.3.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  }
}
